

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Résultat
        </MudText>
    </TitleContent>
    <DialogContent>


        <SimpleStatisticComponent GuessResult="GuessResult"></SimpleStatisticComponent>
    </DialogContent>

</MudDialog>

@code {
    [NotNull, CascadingParameter] IMudDialogInstance? MudDialog { get; set; }

  
    [Parameter] public List<StatisticModel> GuessResult { get; set; } = default!;
    private ApexChart<StatisticModel> _barChart { get; set; } = new();

    private ApexChartOptions<StatisticModel> _barCharOptions { get; set; } = new ApexChartOptions<StatisticModel>
    {
        Theme = new Theme
        {
            Mode = Mode.Light,
            Palette = PaletteType.Palette6
        }
    };
    protected override async Task OnParametersSetAsync()
    {
        await _barChart.RenderAsync();
        await base.OnParametersSetAsync();
    }

}
